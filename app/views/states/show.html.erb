<% @page_title = "Pet Grooming in #{@state.full_name}" %>
<% @page_description = "New Description" %>


<div class="ipage-header">
	<div class="inside narrow">
		<h1>Locations in <%= @state.full_name %></h1>
		<h2>Use the map below to find a location near you.</h2>
	</div>

	<% if user_signed_in? && current_user.admin? %>
  	<div class="boundary-align uk-panel">
	    <button class="admin-uk wl-uk uk-float-right" type="button"><span  uk-icon="icon: settings;"></span></button>
	    <div uk-dropdown="mode: click; pos: bottom-right; boundary: .wl-uk;">
      	<div class="admin-btns">
      		<!-- <div class="manu"> -->
      			<%= link_to 'Add a Location', new_location_path, class: 'woof-link' %>
						<%= link_to "Add a State", new_state_path, class: 'woof-link' %>
      		<!-- </div> -->
      	</div>
    	</div>
    </div>
	<% end %>
</div>

<div class="full-search">
	<div class="full listings">

		<div class="search-sec">
			<div class="inside lg">
				<div class="searcher">
					<%= form_with(url: locations_path, class: "form-inline", local: true, method: :get) do |f| %>
					  <%= f.text_field :near, class: "form-control", placeholder: "Search by city and state, or zip" %>

					  <%= f.select(:proximity) do %>
					    <% [['10 mi', '10'], ['20 mi', '20'], [ '30 mi', '30']].each do |c| -%>
					      <%= content_tag(:option, c.first, value: c.last) %>
					    <% end %>
					  <% end %>

					  <%= f.submit "", class: "btn btn-outline-secondary search" %>
					<% end %>
				</div>

				<div class="boundary-align uk-panel filter-box states">
    	    <div class="filter-uk">Search by State <span  uk-icon="icon: chevron-down;"></span></div>
    	    <div uk-dropdown="mode: click; pos: bottom-right; boundary: .filter-uk;">
    	    	<% @states.each do |state| %>
    					<div class="filter-tag <%= state.full_name %>">
    						<%= link_to "#{state.full_name}", state_path(state) %>
    					</div>
    				<% end %>
        	</div>
        </div>

		  	<div class="boundary-align uk-panel filter-box">
			    <div class="filter-uk">Search by Service <span  uk-icon="icon: chevron-down;"></span></div>
			    <div uk-dropdown="mode: click; pos: bottom-right; boundary: .filter-uk;">
			    	<div class="filter-tag">
			    		<span class="tag-icon retail"></span>
			    		<a href="/tags/retail">Retail</a>
			    	</div>

						<div class="filter-tag">
							<span class="tag-icon grooming"></span>
							<a href="/tags/grooming">Grooming</a>
						</div>
						<div class="filter-tag">
							<span class="tag-icon self-service-grooming"></span>
							<a href="/tags/self-service-grooming">Self-Service Grooming</a>
						</div>
						<div class="filter-tag">
							<span class="tag-icon doggie-daycare"></span>
							<a href="/tags/doggie-daycare">Day Care &amp; Pet Resort</a>
						</div>
						<div class="filter-tag">
							<span class="tag-icon veterinary-clinic"></span>
							<a href="/tags/veterinary-clinic">Wellness Clinic</a>
						</div>
		    	</div>
		    </div>
		  </div>
		</div>

		<div class="map">
	    <%= tag.div nil, id: 'map' %>
		</div>

		<div class="loclist">
			<div class="inside">
				<%= render partial: "locations/list" %>
			</div>
		</div>

	</div>
</div>
