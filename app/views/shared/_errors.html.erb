<% if obj.errors.any? %>
  <div class="full-sec">
    <div class="panel panel-danger err">
      <div class="panel-heading">
        <h4 class="panel-title">
          <%= pluralize(obj.errors.count, "error") %>
          prohibited this form from being sent:
        </h4>

        <div class="panel-body">
          <ul>
            <% obj.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
