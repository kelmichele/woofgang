<% @page_title = @post.title.titleize %>
<% @page_description = "" %>



<div class="ipage-header">
	<div class="inside med2">
		<h1><%= @post.title %></h1>
		<!-- <%= link_to 'Back to all posts', posts_path, class: 'woof-link' %>  -->
	</div>
</div>


<div class="full-post">
	<div class="back-link">
		<%= link_to "/posts", class: 'text-link back' do %>
			<span class="" uk-icon="icon: arrow-left;"></span> Back to All Posts
		<% end %>

		<% if user_signed_in? && current_user.admin? %>
			<div class="admin-box">
				<%= render 'actions' %>
			</div>
		<% end %>
	</div>


	<div class="inside">
		<div class="feat-img">
			<% if @post.image.attached? %>
			  <%= image_tag @post.image %>
			<% end %>
		</div>

		<div class="feat-content">
			<p><%= @post.content %></p>
		</div>

		<div class="full-sec">

		</div>
	</div>
</div>
