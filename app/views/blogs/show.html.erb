<% @page_title = "Woof Gang Blog Post" %>
<% @page_description = "" %>



<div class="ipage-header left opink">
	<div class="inside">
		<h1><%= @blog.title %></h1>
		<%= link_to 'Back to all posts', blogs_path, class: 'woof-link' %>
	</div>
</div>

<div class="full-sec">
	<div class="inside">

		<% if @blog.image.attached? %>
		  <%= image_tag @blog.image %>
		<% end %>

		<p><%= @blog.text %></p>

		<div class="full">
			<%= render 'actions' %>
		</div>
	</div>
</div>
