<div class="blog-form">
  <%= form_for(@blog, :html => {class: "form-horizontal", role: "form" }) do |f| %>
		<%= render 'shared/errors', obj: @blog %>

		<div class="form-group title">
	    <%= f.label :title %><br>
	    <%= f.text_area :title %>
		</div>

		<div class="form-group image">
			<%= f.label :image %>
		  <%= f.file_field :image %>
		</div>

		<div class="form-group">
	    <%= f.label :text %><br>
	    <%= f.text_area :text %>
		</div>

		<div class="form-group">
		  <div class="actions">
		    <%= f.submit(@blog.new_record? ? "Create new post" : "Update post", class: "action woof-link submit") %>
		    <%= link_to("[ Cancel ]", blogs_path, :class => 'action woof-link cancel') %>

		    <% unless @blog.new_record? %>
		      <%= link_to "Delete This Post", blog_path(@blog), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "action woof-link danger" %>
		    <% end %>
		  </div>
		  <p><small>*Required Fields</small></p>
		</div>
  <% end %>
</div>
