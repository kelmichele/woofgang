<% @page_title = "Contact List" %>
<% @page_description = "New Description" %>

<div class="ipage-header opink simple">
	<div class="inside">
		<h1>Contacts</h1>
	</div>
</div>

<div class="full-sec">
	<div class="inside narrow">
			<% @contacts.each do |contact| %>
				<%= link_to contact_path(contact) do %>
					<h4 class="bmargin0"><b>(<%= contact.id %>) <%= contact.name %></b></h4>
					<p style="margin-top: 7px;">
						<%= contact.location %><br>
						<%= contact.email %>
					</p>
				<% end %>

			<% end %>
		</div>
	</div>
</div>
