<%= render 'shared/errors', obj: @contact %>
<%= form_for @contact, url: contact_path do |contact| %>
  <fieldset>
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:alert] %>
      <div class="notice"><%= flash[:alert] %></div>
    <% end %>

    <!-- <div class="full top">
      <p class="print">* indicates required field</p>
      <div class="clearfix"></div><hr>
    </div> -->


    <div class="form-group name">
      <label>*Full Name:</label><br>
      <%= contact.text_field :name %>
    </div>

    <div class="form-group phone">
      <label>*Phone: </label><br>
      <%= contact.text_field :phone %>
    </div>

    <div class="form-group email">
      <label>*Email: </label><br>
      <%= contact.email_field :email %>
    </div>

    <div class="form-group location">
      <label>*Nearest Location:</label><br>
      <!-- = render 'shared/location_select' %> -->
      <!-- = contact.select(:singup) do %>
        < [['Select State', ''], ['Connecticut', 'Connecticut'], ['Florida', 'Florida'], ['Georgia', 'Georgia'], ['Kansas', 'Kansas'], ['Nevada', 'Nevada'], ['New Jersey', 'NewJersey'], ['New York', 'NewYork'], ['North Carolina', 'NorthCarolina'], ['South Carolina', 'SouthCarolina'], ['Tennesse', 'Tennesse'], ['Texas', 'Texas'], ['Virginia', 'Virginia']].each do |c| -%>
          = content_tag(:option, c.first, value: c.last) %>
        < end %>
      < end %> -->






    </div>

    <div class="form-group grapevine">
      <label>*How did you hear about us?</label><br>
      <%= contact.select(:grapevine) do %>
        <% [['Select Answer', ''], ['Advertising', 'Advertising'], ['Social Media', 'Social Media'], ['Family/Friend', 'Family/Friend'], ['Google', 'Google'], ['Event', 'Event'], ['Other', 'Other']].each do |c| -%>
          <%= content_tag(:option, c.first, value: c.last) %>
        <% end %>
      <% end %>
    </div>

    <div class="form-group content">
      <label>*Questions/Comments:</label><br>
      <%= contact.text_area :content %>
    </div>


    <div class="form-group honey">
      <%= label_tag :honey %>
      <%= contact.text_field :honey %>
      <span class="help">Do not fill in this field. It is an anti-spam measure.</span>
    </div>


    <div class="form-group submit">
      <%= contact.submit "Submit", :class=> "send-message" %>
    </div>

    <p class="print">* indicates required field</p>
  </fieldset>
<% end %>








