<%= render 'shared/errors', obj: @location %>
<div class="state-form">
  <%= form_for(@location, :html => {class: "form-horizontal", role: "form" }) do |f| %>
    <div class="form-group">
      <div class="forminfo">
        <%= f.label :street %><br>
        <%= f.text_field :street, class: "form-control", placeholder: "Enter Address", autofocus: true %>
      </div>

      <div class="forminfo">
        <%= f.label :suite %><br>
        <%= f.text_field :suite, class: "form-control", placeholder: "suite", autofocus: true %>
      </div>

      <div class="forminfo">
        <%= f.label :city %><br>
        <%= f.text_field :city, class: "form-control", placeholder: "city", autofocus: true %>
      </div>

      <div class="forminfo">
        <%= f.label :state %><br>
        <%= f.text_field :state, class: "form-control", placeholder: "state", autofocus: true %>
      </div>

      <div class="forminfo">
        <%= f.label :zip %><br>
        <%= f.text_field :zip, class: "form-control", placeholder: "Zipcode", autofocus: true %>
      </div>

      <div class="forminfo">
        <%= f.label :phone %><br>
        <%= f.text_field :phone, class: "form-control", placeholder: "phone", autofocus: true %>
      </div>

      <div class="forminfo">
        <%= f.label :latitude %><br>
        <%= f.text_field :latitude, class: "form-control", placeholder: "Latitude", autofocus: true %>
      </div>

      <div class="forminfo">
        <%= f.label :longitude %><br>
        <%= f.text_field :longitude, class: "form-control", placeholder: "Longitude", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit(@location.new_record? ? "Add Location" : "Update Location", class: "btn btn-primary") %>
      </div>
    </div>
  <% end %>
</div>
