<%= render 'shared/errors', obj: @shop %>
<div class="loc-form">
  <%= form_for(@shop, :html => {class: "form-horizontal", role: "form" }) do |f| %>
    <div class="form-group">

      <h3>Contact</h3>
      <div class="forminfo name">
        <%= f.label :store_name %><br>
        <%= f.text_field :store_name, class: "form-control", placeholder: "Woof Gang Bakery & Grooming", autofocus: true %>
      </div>

      <div class="forminfo email">
        <%= f.label :email_address %><br>
        <%= f.text_field :email_address, class: "form-control", placeholder: "Email Address", autofocus: true %>
      </div>

      <div class="forminfo phone">
        <%= f.label :phone %><br>
        <%= f.text_field :phone, class: "form-control", placeholder: "Phone", autofocus: true %>
      </div>

      <div class="forminfo street">
        <%= f.label :street_address %><br>
        <%= f.text_field :street_address_one, class: "form-control", placeholder: "Enter Address", autofocus: true %>
      </div>

      <div class="forminfo street2">
        <%= f.label :street_address_2 %><br>
        <%= f.text_field :street_address_two, class: "form-control", placeholder: "Additional Address", autofocus: true %>
      </div>
      <div class="clearfix"></div>

      <div class="forminfo city">
        <%= f.label :city %><br>
        <%= f.text_field :city, class: "form-control", placeholder: "City", autofocus: true %>
      </div>

      <div class="forminfo state">
        <%= f.label :state %><br>
        <%= f.collection_select(:state_id, State.all, :id, :name) %>
      </div>

      <div class="forminfo zip">
        <%= f.label :zip %><br>
        <%= f.text_field :zip, class: "form-control", placeholder: "Zipcode", autofocus: true %>
      </div>


      <div class="clearfix"></div>
      <h3>Social<br>
        <span>Social media url bases are already entered. Just add <b>/your-link</b> in each box.<br><b>Enter FULL website url.</b></span>
      </h3>
      <div class="forminfo link fb">
        <%= f.label :facebook %><br>
        <%= f.text_field :fb, class: "form-control", placeholder: "https://www.facebook.com/", autofocus: true %>
      </div>

      <div class="forminfo link insta">
        <%= f.label :instagram %><br>
        <%= f.text_field :insta, class: "form-control", placeholder: "https://www.instagram.com/", autofocus: true %>
      </div>

      <div class="forminfo link twitter">
        <%= f.label :twitter %><br>
        <%= f.text_field :twitter, class: "form-control", placeholder: "https://", autofocus: true %>
      </div>

      <div class="forminfo link yelp">
        <%= f.label :yelp %><br>
        <%= f.text_field :yelp, class: "form-control", placeholder: "https://www.yelp.com/biz/", autofocus: true %>
      </div>

      <div class="forminfo link site">
        <%= f.label :website %><br>
        <%= f.text_field :site, class: "form-control", placeholder: "https://", autofocus: true %>
      </div>



      <div class="clearfix"></div>
      <h3>Additional</h3>

      <div class="forminfo hours">
        <%= f.label :hours %><br>
        <%= f.text_area :hours, class: "form-control", placeholder: "Shop Hours", autofocus: true %>
      </div>

      <div class="forminfo lat">
        <%= f.label :latitude %><br>
        <%= f.text_field :latitude, class: "form-control", placeholder: "Latitude", autofocus: true %>
      </div>

      <div class="forminfo long">
        <%= f.label :longitude %><br>
        <%= f.text_field :longitude, class: "form-control", placeholder: "Longitude", autofocus: true %>
      </div>
    </div>

    <div class="clearfix"></div>
    <hr>

    <div class="forminfo image">
      <%= f.label :image %>
      <%= f.file_field :image %>

      <% unless @shop.new_record? %>
        <% if @shop.image.attached? %>
          <p class="tsmall">Current Image:</p>
          <div class="thumb"><%= image_tag @shop.image %></div>
        <% end %>
      <% end %>
    </div>
    <div class="clearfix"><hr>


    <div class="form-group btns">
      <%= f.submit(@shop.new_record? ? "Add Shop" : "Update Shop", class: "btn woof-link save") %>
    </div>
  <% end %>
</div>
